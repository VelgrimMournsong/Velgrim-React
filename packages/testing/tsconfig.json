{
    "compilerOptions": {
        // "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationMap": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        // "jsx": "react-jsx",
        "jsx": "preserve",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitOverride": true,
        "outDir": "dist",
        "preserveSymlinks": true,
        // from app
        "resolveJsonModule": true,
        // from template
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es6",
        "baseUrl": "."
    },
    "include": [
//        "spec/**/*",
        "src/**/*"
//        "stories/**/*",
//        ".storybook/main.ts"
    ]//,
    // "exclude": [
    // "dist",
    // "node_modules"
    // ]
}
